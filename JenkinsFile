pipeline {
    environment {
          AWS_ACCESS_KEY_ID = credentials('awsAccessKeyId')
          AWS_SECRET_ACCESS_KEY = credentials('awsSecretAccessKey')
          AWS_DEFAULT_REGION = 'ap-northeast-2'
          HOME = '.' // Avoid npm root owned
        }

    agent any

    stages {
        stage("Build") {
            steps {
                sh "chmod +x ./gradlew"
                sh "./gradlew build"
            }
        }
    }
}
